{
  "name": "@lab-tutorial/backend",
  "version": "1.0.0",
  "description": "Lab Tutorial Backend - AWS SAM serverless backend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && npm run postbuild",
    "build:watch": "tsc --watch",
    "postbuild": "npm run inject-package-json",
    "inject-package-json": "echo '{\"type\":\"module\"}' > dist/handlers/package.json && echo '{\"type\":\"module\"}' > dist/agents/package.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "sam:build": "sam build",
    "sam:local": "sam local start-api",
    "deploy": "sam deploy --guided",
    "deploy:dev": "sam deploy --config-file samconfig.dev.toml --resolve-s3",
    "deploy:prod": "sam deploy --config-file samconfig.prod.toml --resolve-s3",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.879.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.462.0",
    "@aws-sdk/client-dynamodb": "^3.462.0",
    "@aws-sdk/client-lambda": "^3.879.0",
    "@aws-sdk/client-s3": "^3.462.0",
    "@aws-sdk/client-sfn": "^3.462.0",
    "@aws-sdk/client-sns": "^3.879.0",
    "@aws-sdk/client-sqs": "^3.879.0",
    "@aws-sdk/client-ssm": "^3.879.0",
    "@aws-sdk/lib-dynamodb": "^3.462.0",
    "@lab-tutorial/infrastructure": "*",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "audit-ci": "^7.1.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
