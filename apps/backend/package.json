{
  "name": "@lab-tutorial/backend",
  "version": "1.0.0",
  "description": "Lab Tutorial Backend - AWS SAM serverless backend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && npm run fix-imports",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist .aws-sam",
    "sam:build": "npm run clean && npm run build && npm run copy-deps && npm run postbuild && sam build",
    "sam:local": "sam local start-api",
    "deploy:dev": "npm run sam:build && sam deploy --config-file samconfig.dev.toml --resolve-s3",
    "deploy:prod": "npm run sam:build && sam deploy --config-file samconfig.prod.toml --resolve-s3",
    "fix-imports": "node scripts/fix-import-paths.js",
    "build:watch": "tsc --watch",
    "copy-deps": "node scripts/copy-infrastructure.js",
    "postbuild": "npm run inject-package-json",
    "inject-package-json": "node scripts/inject-package-json.js",
    "type-check": "tsc --noEmit",
    "lint:fix": "eslint src --ext .ts --fix",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare-sam-build": "node scripts/prepare-sam-build.js",
    "sam:clean": "rimraf .aws-sam dist/**/node_modules"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.879.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.462.0",
    "@aws-sdk/client-dynamodb": "^3.462.0",
    "@aws-sdk/client-lambda": "^3.879.0",
    "@aws-sdk/client-s3": "^3.462.0",
    "@aws-sdk/client-sfn": "^3.462.0",
    "@aws-sdk/client-sns": "^3.879.0",
    "@aws-sdk/client-sqs": "^3.879.0",
    "@aws-sdk/client-ssm": "^3.879.0",
    "@aws-sdk/lib-dynamodb": "^3.462.0",
    "@lab-tutorial/infrastructure": "file:../../packages/infrastructure",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "audit-ci": "^7.1.0",
    "eslint": "^8.53.0",
    "fs-extra": "^11.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
