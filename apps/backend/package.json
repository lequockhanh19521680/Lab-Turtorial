{
  "name": "@lab-tutorial/backend",
  "version": "1.0.0",
  "description": "Lab Tutorial Backend - AWS SAM serverless backend",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist .aws-sam",
    "build:typescript": "tsc && node scripts/copy-package-files.js",
    "build:layer": "cd layers/common-deps/nodejs && npm install --only=prod",
    "build": "npm run clean && npm run build:layer && npm run build:typescript",
    "deploy:dev": "npm run build && sam build && sam deploy --config-file samconfig.dev.toml --resolve-s3",
    "deploy:prod": "npm run build && sam build && sam deploy --config-file samconfig.prod.toml --resolve-s3",
    "test": "jest",
    "dev": "sam local start-api --warm-containers LAZY --port 8080"
  },
  "dependencies": {
    "fs-extra": "^11.3.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "audit-ci": "^7.1.0",
    "eslint": "^8.53.0",
    "fs-extra": "^11.3.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.879.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.462.0",
    "@aws-sdk/client-dynamodb": "^3.462.0",
    "@aws-sdk/client-lambda": "^3.879.0",
    "@aws-sdk/client-s3": "^3.462.0",
    "@aws-sdk/client-sfn": "^3.462.0",
    "@aws-sdk/client-sns": "^3.879.0",
    "@aws-sdk/client-sqs": "^3.879.0",
    "@aws-sdk/client-ssm": "^3.879.0",
    "@aws-sdk/lib-dynamodb": "^3.462.0",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
